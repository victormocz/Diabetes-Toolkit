<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/readingimage"
    android:layout_width="55dp"
    android:layout_height="55dp"
    android:src="@drawable/ic_blood"
    android:layout_margin="10dp"
    />
    <TextView
        android:id="@+id/readingname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reading Name"
        android:layout_toRightOf="@+id/readingimage"
        android:layout_margin="2dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/glucose"
        android:layout_below="@id/readingname"
        android:layout_toRightOf="@+id/readingimage"
        android:text="glucose"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/readingdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reading note"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/readingimage"
        android:layout_below="@+id/glucose"
        />

</RelativeLayout>