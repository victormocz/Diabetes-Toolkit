<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/medimage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_med"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/medname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medication Name"
        android:layout_toRightOf="@+id/medimage"
        android:layout_margin="5dp"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/medform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reading note"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/medimage"
        android:layout_below="@+id/medname"
        />
    <TextView
        android:id="@+id/meddosage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reading note"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/medform"
        android:layout_below="@+id/medname"
        />
    <TextView
        android:id="@+id/medunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reading note"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/meddosage"
        android:layout_below="@+id/medname"
        />
    <TextView
        android:id="@+id/lastdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reading note"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/medimage"
        android:layout_below="@+id/medform"
        />
    <ImageView
        android:id="@+id/todoimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_todo"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        />
</RelativeLayout>